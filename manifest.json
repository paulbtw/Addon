{
    "name": "MYTEMS24 - Compare Everywhere",
    "version": "0.1",
    "description": "Check prices for digital product all around the web.",
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "96": "img/96.png",
        "128": "img/128.png"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        "localization/*/strings.json"
    ],
    "background": {
        "scripts": [
            "js/lib/webextension-polyfill/browser-polyfill.js",
            "js/lib/DOMPurify/purify.js",
            "js/helper.js",
            "js/language.js",
            "js/config.js",
            "js/core.js",
            "js/background/background.js"
        ],
        "persistent": false
    },
    "options_ui": { "page": "options.html", "open_in_tab": true },
    "content_scripts": [{
        "matches": [
            "*://store.steampowered.com/app/*",
            "*://www.g2a.com/*",
            "*://www.mmoga.com/*",
            "*://www.mmoga.de/*",
            "*://www.mmoga.fr/*",
            "*://www.mmoga.co.uk/*",
            "*://www.mmoga.es/*",
            "*://www.mmoga.se/*",
            "*://www.kinguin.net/*",
            "*://www.hrkgame.com/*/games/product/*"
        ],
        "run_at": "document_idle",
        "js": [
            "js/lib/webextension-polyfill/browser-polyfill.js",
            "js/lib/DOMPurify/purify.js",
            "js/lib/popper.min.js",
            "js/lib/index.all.min.js",
            "js/helper.js",
            "js/language.js",
            "js/config.js",
            "js/core.js",
            "js/background/background.js",
            "js/content/g2a.js",
            "js/content/mmoga.js",
            "js/content/steam.js",
            "js/content/kinguin.js",
            "js/content/hrkgame.js",
            "js/content/content.js"
        ],
        "css": [
            "css/core.css"
        ]
    }],
    "manifest_version": 2
}